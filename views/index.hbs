<div class="container my-5">
  <div class="jumbotron">
    <h1>Hola {{ username }}</h1>
    
    <hr>
    
    <div class="text-left">
      <button class="btn btn-success my-3" onclick="location.href = '/logout'">Logout</button>
    </div>
  </div>

    <div class="container">
        <h1>Productos en la base de datos</h1>

        <table class="table table-dark table-striped" >
          <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
              </tr>
          </thead>
          <tbody id="tabla-products">  
              {{#each item}}
              <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.precio}}</td>   
                <td><img src="{{this.foto}}" alt="{{this.nombre}}" style="width: 50px;"></td>   
              </tr>
              {{/each}}
                
          </tbody>
          </table> 

    </div>
</div>